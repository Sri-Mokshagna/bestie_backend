# Server
NODE_ENV=development
PORT=3000

# MongoDB
MONGODB_URI=mongodb://admin:admin123@localhost:27017/bestie?authSource=admin

# Redis (for call metering and job queues)
# Set REDIS_ENABLED=false to disable Redis (call metering won't work)
REDIS_ENABLED=true

# For production (Render): Use REDIS_URL
REDIS_URL=redis://red-xxxxx:6379
# For TLS: REDIS_URL=rediss://red-xxxxx:6380

# For development: Use individual host/port
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Firebase Admin SDK
# Get these from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_PROJECT_ID=your-firebase-project-id
# For FIREBASE_PRIVATE_KEY: Copy the entire private_key value from the JSON file
# If setting via environment variable (e.g., Render), use the raw key WITH \n for newlines
# Example: "-----BEGIN PRIVATE KEY-----\nMIIEvgIBADANBg...\n-----END PRIVATE KEY-----\n"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# ZEGOCLOUD
ZEGO_APP_ID=your-zego-app-id
ZEGO_SERVER_SECRET=your-zego-server-secret

# Razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Cloudinary (for file uploads: Aadhar, Voice, Avatars)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AdMob Server-Side Verification
ADMOB_SSV_PUBLIC_KEY=your-admob-ssv-public-key

# Coin Rates
AUDIO_CALL_COINS_PER_MINUTE=10
VIDEO_CALL_COINS_PER_MINUTE=60
CHAT_COINS_PER_MESSAGE=3

# Commission
RESPONDER_COMMISSION_PERCENTAGE=70
ADMIN_COMMISSION_PERCENTAGE=30

# Cashfree Payment Gateway
# ============================================
# Get credentials from: https://merchant.cashfree.com/
# 
# ENVIRONMENT DETECTION:
# - Credentials with 'TEST' or '_test_' in them = SANDBOX mode
# - Production credentials (no 'TEST') = PRODUCTION mode
# 
# For PRODUCTION, you need:
# 1. Go to Cashfree Dashboard > Developers > API Keys
# 2. Enable Production mode
# 3. Get your production App ID and Secret Key
# ============================================

# Payment Gateway Credentials (for receiving payments)
CASHFREE_APP_ID=your-cashfree-app-id
CASHFREE_SECRET_KEY=your-cashfree-secret-key

# Webhook Secret (required for production)
# Get from: Cashfree Dashboard > Developers > Webhooks > Secret Key
# Set to 'test_skip_verification' to skip verification in development
CASHFREE_WEBHOOK_SECRET=your-webhook-secret

# Payout Credentials (for sending money to responders)
# ============================================
# Get from: Cashfree Dashboard > Payouts > API Keys
# Required for responder withdrawal functionality
# ============================================
CASHFREE_PAYOUT_CLIENT_ID=your-payout-client-id
CASHFREE_PAYOUT_CLIENT_SECRET=your-payout-client-secret

# URLs
# ============================================
# SERVER_URL: Your deployed backend URL (used for webhooks and redirects)
# CLIENT_URL: Deep link scheme for mobile app redirects
# ============================================
CLIENT_URL=bestie://payment
SERVER_URL=http://localhost:3000

# For Production (Render.com example):
# SERVER_URL=https://your-app.onrender.com
